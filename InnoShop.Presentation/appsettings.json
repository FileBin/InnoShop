{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtIssuer": "http://localhost",
  "JwtAudience": "http://localhost",
  
  "ReverseProxy": {
    "Routes": {
      "userApiRoute" : {
        "ClusterId": "userApiCluster",
        "Match": {
          "Path": "/api/accounts/{*any}"
        }
      },
      "productApiRoute": {
        "ClusterId": "productApiCluster",
        "Match": {
          "Path": "/api/products/{*any}"
        }
      }
    },
    "Clusters": {
      "userApiCluster": {
        "Destinations": {
          "server1": {
            "Address": "http://localhost:5294/"
          }
        }
      },
      "productApiCluster": {
        "Destinations": {
          "server1": {
            "Address": "http://localhost:5192/"
          }
        }
      }
    }
  }
}